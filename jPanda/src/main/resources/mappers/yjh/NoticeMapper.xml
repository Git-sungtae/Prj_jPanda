<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kakao.jPanda.yjh.NoticeMapper">
	
	<select id="selectNoticeByPagination" parameterType="AdminPagination" resultType="AdminNotice">
		SELECT 	*
		FROM 	(SELECT	ROWNUM rn, n.*
				 FROM	(SELECT	  * 
				 		 FROM 	  notice 
				 		 ORDER BY reg_date DESC) n
				)
		WHERE  	rn BETWEEN #{startRow} AND #{endRow}
	</select>
	
	<select id="selectNoticeForTotalCount" resultType="int">
		select 	count(*)
		from 	notice
	</select>

	<insert id="insertNotice" parameterType="AdminNotice">
		insert 
		into 	notice
		values 	(notice_no_seq.nextval, #{title}, #{content}, #{regDate})
	</insert>
	
	<select id="selectNoticeByNoticeNo" parameterType="Long" resultType="AdminNotice">
		select 	* 
		from 	notice
		where 	notice_no = #{noticeNo}
	</select>
	
	<update id="updateNotice" parameterType="AdminNotice">
		update 	notice
		set 	title = #{title},
				content = #{content},
				reg_date = #{regDate}
		where 	notice_no = #{noticeNo}
	</update>
	
</mapper>