<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kakao.jPanda.yjh.ExchangeMapper">

	<select id="selectExchange" resultType="Exchange">
		select 	exchange_No, talent_No, id, submit_Date, total, status
		from 	exchange
		where 	status = '검토중'
	</select>
	
	<select id="selectExchangeByExchangeNo" parameterType="Long" resultType="Exchange">
		select 	* 
		from 	exchange
		where 	exchange_no = #{exchangeNo}
	</select>
	
	<update id="updateExchange" parameterType="Exchange">
		update 	exchange
		set 	status = #{status},
				approve_date = sysdate
		where 	exchange_no = #{exchangeNo}
	</update>
	
